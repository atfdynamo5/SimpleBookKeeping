                               LabelPoint="{Binding PointLabel}"/>
                                
                            </lvc:PieChart.Series>
                        </lvc:PieChart>
                    </Grid>

                    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                        <lvc:CartesianChart  Width="700" Height="400" Series="{x:Bind SeriesCollection}" LegendLocation="Left">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis Title="Income" Labels="{x:Bind Labels}"/>
                            </lvc:CartesianChart.AxisX>
