                    </Button>
                </StackPanel>

            </Grid>
        </Grid>
-->
        <Grid Grid.Row="1" Grid.Column="0" Background="#FFE0DABB">
            <StackPanel>
                <Image Source="Assets\mainlogo.png" Height="200" Stretch="UniformToFill"></Image>
                <Button
                    Margin="0 0 0 10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Width="Auto"
                    Height="40"
                    Click="DashBoardButton_Click"
                     Foreground="#FFFDF8E6" Background="#FF90A84A">
                    <Grid Width="180">
                        <FontIcon Grid.Column="0" Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Left" FontFamily="Segoe MDL2 Assets" Glyph="&#xF246;"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontWeight="Normal" FontSize="16">DASHBOARD</TextBlock>
                    </Grid>
                </Button>

                <Button
                    x:Name="MenuExpenseButton"
                    Margin="0 0 0 10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Width="Auto"
                    Height="40"
                    Click="ExpenseButton_Click"
                    Foreground="#FFFDF8E6" Background="#FF90A84A">
                    <Grid Width="180">
                        <FontIcon Grid.Column="0" Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Left" FontFamily="Segoe MDL2 Assets" Glyph="&#xEC59;"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="16">EXPENSE</TextBlock>
                    </Grid>
                </Button>
                <Button
                    x:Name="MenuIncomeButton"
                    Margin="0 0 0 10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Width="Auto"
                    Height="40"
                    Click="IncomeButton_Click"
                    Foreground="#FFFDF8E6" Background="#FF90A84A">
                    <Grid Width="180">
                        <FontIcon Grid.Column="0" Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Left" FontFamily="Segoe MDL2 Assets" Glyph="&#xEC5C;"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="16">INCOME</TextBlock>
                    </Grid>
                </Button>
                <Button
                    Margin="0 0 0 10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Width="Auto"
                    Height="40"
                    Click="ExportToExcelButton_Click"
                    Foreground="#FFFDF8E6" Background="#FF90A84A">
                    <Grid Width="180">
                        <FontIcon Grid.Column="0" Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Left" FontFamily="Segoe MDL2 Assets" Glyph="&#xE9F9;"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="16">EXPORT</TextBlock>
                    </Grid>
                </Button>
                <Button
                    Margin="0 0 0 10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Width="Auto"
                    Height="40"
                    Click="ProfileButton_Click"
                    Foreground="#FFFDF8E6" Background="#FF90A84A">
                    <Grid Width="180">
                        <FontIcon Grid.Column="0" Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Left" FontFamily="Segoe MDL2 Assets" Glyph="&#xE716;"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="16">PROFILE</TextBlock>
                    </Grid>
                </Button>
                <Button
                    Margin="0 0 0 10"
                    BorderThickness="1"
                    BorderBrush="Gray"
                    Width="Auto"
                    Height="40"
                    Click="SettingsButton_Click"
                     Foreground="#FFFDF8E6" Background="#FF90A84A">
                    <Grid Width="180">
                        <FontIcon Grid.Column="0" Grid.Row="1" Margin="0 0 0 0" HorizontalAlignment="Left" FontFamily="Segoe MDL2 Assets" Glyph="&#xE713;"/>
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI" FontSize="16">SETTINGS</TextBlock>
                    </Grid>
                </Button>
            </StackPanel>

        </Grid>

        <Grid x:Name="DashboardGrid"  MinWidth="1200" Grid.Column="1" Grid.Row="1" Visibility="Visible" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

            <Grid Margin="20,20,0,0" Height="Auto" Width="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MaxWidth="600"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0" Margin="10,0,0,0" FontWeight="Bold" FontSize="30">Income Totals List</TextBlock>
                <ScrollViewer  Grid.Column="0" Grid.Row="0" Padding="20,30,0,0" MaxHeight="700">
                    <ListView ItemsSource="{x:Bind Path=ViewModel.IncomeTotalsList, Mode=OneWay}" HorizontalAlignment="Left" Width="auto" Margin="0,5,0,10" VerticalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="320"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>


                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock  Padding="5,15,5,0" FontSize="25" Text="{Binding Path=Key}"  />
                                        <TextBlock FontSize="25" Padding="0,15,5,10" Text=":" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Right" Padding="5,15,5,10" FontSize="25" Text="{Binding Value}" />



                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="10,0,0,0" FontWeight="Bold" FontSize="30">Expense Totals List</TextBlock>
                <ScrollViewer Grid.Column="1" Grid.Row="0" Padding="20,30,0,0" MaxHeight="700">
                    <ListView  ItemsSource="{x:Bind Path=ViewModel.ExpenseTotalsList, Mode=OneWay}" HorizontalAlignment="Left" Width="auto" Margin="0,5,0,10" VerticalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="320"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>


                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock  Padding="5,15,5,0" FontSize="25" Text="{Binding Path=Key}"  />
                                        <TextBlock FontSize="25" Padding="0,15,5,10" Text=":" />
                                    </StackPanel>
                                    <TextBlock Grid.Column="1" HorizontalAlignment="Right" Padding="5,15,5,10" FontSize="25" Text="{Binding Value}" />



                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
                <Line Grid.Column="0" Grid.Row="2" Stroke="Red"  X2="510" Height="10"/>
                <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal"  >
                    <TextBlock  FontWeight="Bold" FontSize="30" Margin="15,0,0,0" >Grand Total:</TextBlock>
                    <TextBlock Padding="10,0,0,0" FontSize="30" Margin="146,0,0,0" FontWeight="SemiBold" Text="{x:Bind ViewModel.IncomeGrandTotal, Mode=OneWay}" />
                </StackPanel>
                <Line Grid.Column="1" Grid.Row="2" Stroke="Red" X2="510" Height="10"/>
                <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" >
                    <TextBlock  FontWeight="Bold" FontSize="30" Margin="15,0,0,0" >Grand Total:</TextBlock>
                    <TextBlock Padding="10,0,0,0" FontSize="30" Margin="146,0,0,0" FontWeight="SemiBold" Text="{x:Bind ViewModel.ExpenseGrandTotal, Mode=OneWay}" />
                </StackPanel>
            </Grid>
            

            <!--    
                <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                        <lvc:PieChart LegendLocation="Bottom" Width="400" Height="400">
                            <lvc:PieChart.Series>
                                <lvc:PieSeries Title="Expense" Values="{Binding Values1}" DataLabels="True" PushOut="10" 
                               LabelPoint="{Binding PointLabel}"/>
